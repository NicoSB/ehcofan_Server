<table>
  <tr>
    <th>id</th>
    <th>number</th>
    <th>name</th>
    <th>surname</th>
    <th>position</th>
    <th></th>
    <th></th>
  </tr>
 
  <% @players.each do |player| %>
    <tr>
      <td><%= player.id %></td>
      <td><%= player.number %></td>
      <td><%= player.name %></td>
      <td><%= player.surname %></td>
      <td><%= player.position %></td>
      <td><%= link_to 'Edit', edit_player_path(player) %></td>
      <td><%= link_to 'Destroy', player_path(player),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

