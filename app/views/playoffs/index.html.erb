<p id="notice"><%= notice %></p>

<h1>Listing Playoffs</h1>

<table>
  <thead>
    <tr>
      <th>Team1</th>
      <th>Team2</th>
      <th>Title</th>
      <th>Running</th>
      <th>G1</th>
      <th>G2</th>
      <th>G3</th>
      <th>G4</th>
      <th>G5</th>
      <th>G6</th>
      <th>G7</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playoffs.each do |playoff| %>
      <tr>
        <td><%= playoff.team1 %></td>
        <td><%= playoff.team2 %></td>
        <td><%= playoff.title %></td>
        <td><%= playoff.running %></td>
        <td><%= playoff.g1 %></td>
        <td><%= playoff.g2 %></td>
        <td><%= playoff.g3 %></td>
        <td><%= playoff.g4 %></td>
        <td><%= playoff.g5 %></td>
        <td><%= playoff.g6 %></td>
        <td><%= playoff.g7 %></td>
        <td><%= link_to 'Show', playoff %></td>
        <td><%= link_to 'Edit', edit_playoff_path(playoff) %></td>
        <td><%= link_to 'Destroy', playoff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

